// ------------ Scope ------------

scope: () {
    let other = 4;
    assert(other == 4);

    // shadow
    let other = 5;
    assert(other == 5);

    if true {
        // shadow
        let other = 10;
        assert(other == 10);

        if false {
            let double = 1;
        }
    }

    assert(other == 5);
    // assert(double == 1);
}

// ------------ Util ------------

I: const u32 = 0;

test: (condition: bool) {
    printf("Test % .................... ", I);
    if condition {
        printf("Ok\n");
    } else {
        printf("Fail\n");
    }

    I += 1;
}

assert: (condition: bool) {
    if !condition {
        printf("failed assert\n");
        exit(1);
    }
}

